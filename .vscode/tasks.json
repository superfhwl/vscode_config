        // Linux Tasks
        {
            "label": "Run Program Without Debugging Linux",
            "type": "shell",
            "command": "${workspaceFolder}/../USDProcessTest/build/bin/profile/Editor",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/../USDProcessTest/build/bin/profile/:${env:LD_LIBRARY_PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },    
        {
            "label": "Run Program with GDB (Lazy Debugging)",
            "type": "shell",
            "command": "gdb",
            "args": [
                "--quiet",
                "--ex", "set auto-solib-add off",
                "--ex", "set auto-load python-scripts off",
                "--ex", "set debug-file-directory /dev/null",
                "--ex", "file ${workspaceFolder}/../USDProcessTest/build/bin/profile/Editor",
                "--ex", "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/../USDProcessTest/build/bin/profile/:${env:LD_LIBRARY_PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },            
        {
            "label": "Configure CMake Project Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DLY_UNITY_BUILD=ON"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/../USDProcessTest"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Editor Profile -j10 Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Editor",
                "--config",
                "profile",
                "--",
                "-j10"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../USDProcessTest"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Editor Profile Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "Editor",
                "--config",
                "profile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../USDProcessTest"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Mujoco Protobuf Linux",
            "type": "shell",
            "command": "protoc",
            "args": [
                "--proto_path=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--cpp_out=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos/mjc_message.proto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Generate Mujoco gRPC Linux",
            "type": "shell",
            "command": "protoc",
            "args": [
                "--proto_path=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--grpc_out=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--plugin=protoc-gen-grpc=/usr/local/bin/grpc_cpp_plugin",
                "${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos/mjc_message.proto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Generate GDB Index Linux",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "for file in ${workspaceFolder}/../USDProcessTest/build/bin/profile/*; do if [[ -x \"$file\" || \"$file\" == *.so ]]; then echo \"Generating GDB index for $file\"; gdb-add-index \"$file\"; fi; done"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }        
    ]
}
