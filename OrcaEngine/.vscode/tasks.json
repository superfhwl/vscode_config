        // Linux Tasks
        {
            "label": "Run OrcaEditor",
            "type": "shell",
            "command": "${workspaceFolder}/../OrcaStudio/build/bin/profile/OrcaEditor",
            "args": ["--forceAdapter", "NVIDIA GeForce RTX 5070 Ti Laptop GPU", "--lockFps60"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/../OrcaStudio/build/bin/profile/:${env:LD_LIBRARY_PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },    
        {
            "label": "Run GameLauncher",
            "type": "shell",
            "command": "${workspaceFolder}/../OrcaStudio/build/bin/profile/OrcaStudio.GameLauncher",
            "args": ["--forceAdapter", "NVIDIA GeForce RTX 5070 Ti Laptop GPU", "--lockFps60"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceFolder}/../OrcaStudio/build/bin/profile/:${env:LD_LIBRARY_PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },    
        {
            "label": "Build OrcaStudio Profile Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "OrcaEditor",
                "OrcaStudio.GameLauncher",
                "AssetBundler",
                "AssetBundlerBatch",
                "MujocoImporterBatch",
                "OrcaBuilderHubCli",
                "--config",
                "profile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../OrcaStudio"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build OrcaStudio Profile Linux (PySide)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "OrcaPySide",
                "OrcaStudio.GameLauncher",
                "AssetBundler",
                "AssetBundlerBatch",
                "MujocoImporterBatch",
                "OrcaBuilderHubCli",
                "--config",
                "profile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../OrcaStudio_Monolithic"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Mujoco Protobuf Linux",
            "type": "shell",
            "command": "${workspaceFolder}/../../.orca/3rdParty/packages/grpc-1.51.1-rev2-linux/grpc/bin/protoc",
            "args": [
                "--proto_path=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--cpp_out=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos/mjc_message.proto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Generate Mujoco gRPC Linux",
            "type": "shell",
            "command": "${workspaceFolder}/../../.orca/3rdParty/packages/grpc-1.51.1-rev2-linux/grpc/bin/protoc",
            "args": [
                "--proto_path=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--grpc_out=${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos",
                "--plugin=protoc-gen-grpc=${workspaceFolder}/../../.orca/3rdParty/packages/grpc-1.51.1-rev2-linux/grpc/bin/grpc_cpp_plugin",
                "${workspaceFolder}/Gems/Mujoco/Code/Source/GrpcService/protos/mjc_message.proto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Generate GDB Index Linux",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "for file in ${workspaceFolder}/../OrcaStudio/build/bin/profile/*; do if [[ -x \"$file\" || \"$file\" == *.so ]]; then echo \"Generating GDB index for $file\"; gdb-add-index \"$file\"; fi; done"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure CMake Project Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "./build",
                "-G",
                "Ninja Multi-Config",
                "-DLY_UNITY_BUILD=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../OrcaStudio"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure CMake Project Linux (with PySide & Monolithic)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "./build",
                "-G",
                "Ninja Multi-Config",
                "-DLY_UNITY_BUILD=ON",
                "-DBUILD_PYSIDE_LAUNCHER=1",
                "-DLY_MONOLITHIC_GAME=1"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../OrcaStudio_Monolithic"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
        
    ]
}
